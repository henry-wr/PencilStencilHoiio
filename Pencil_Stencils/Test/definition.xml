		url="http://www.evolus.vn/Pencil">

	<Properties>
        <PropertyGroup name="Commons">
            <Property name="defaultFont12" type="Font">Segoe UI|normal|normal|12px</Property>
			<Property name="defaultFont14" type="Font">Segoe UI|normal|normal|14px</Property>
			<Property name="defaultFont14Bold" type="Font">Segoe UI|bold|normal|14px</Property>
			<Property name="defaultFont16Bold" type="Font">Segoe UI|bold|normal|16px</Property>
			<Property name="defaultFont18Bold" type="Font">Segoe UI|bold|normal|18px</Property>
			<Property name="heading3" type="Font">Segoe UI|bold|normal|22px</Property>
			<Property name="defaultFontColor" type="Color">#595959</Property>
			<Property name="defaultLinkColor" type="Color">#0081c7</Property>
			<Property name="defaultDisabledTextColor" type="Color">#999999</Property>
        </PropertyGroup>
